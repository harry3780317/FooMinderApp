<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_on_primary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/alcoholTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/humidityTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="200dp"
        android:fontFamily="casual"
        android:text="Alcohol \nConcentration (ppm)"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/humidityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_below="@id/tempTitle"
        android:layout_marginTop="150dp"
        android:fontFamily="casual"
        android:text="Humidity (%)"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/receiveData"
        android:layout_width="272dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="494dp"
        android:freezesText="true"
        android:gravity="bottom"
        android:scrollbars="vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/tempTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:fontFamily="casual"
        android:text="Temperature (Â°C)"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tempView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="27dp"
        android:layout_toEndOf="@+id/tempTitle"
        android:fontFamily="casual"
        android:text="Loading..."
        android:textSize="20sp" />

    <TextView
        android:id="@+id/humidityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tempView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="27dp"
        android:layout_toEndOf="@+id/humidityTitle"
        android:fontFamily="casual"
        android:text="Loading..."
        android:textSize="20sp" />

    <TextView
        android:id="@+id/alcoholView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/humidityView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="31dp"
        android:layout_toEndOf="@+id/alcoholTitle"
        android:fontFamily="casual"
        android:text="Loading..."
        android:textSize="20sp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alcoholTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="295dp"
        android:fontFamily="casual"
        android:text="@string/info"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="italic" />
    
    <ImageView
        android:id="@+id/tempStatus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="27dp" />

    <ImageView
        android:id="@+id/humidityStatus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="27dp" />

    <ImageView
        android:id="@+id/alcoholStatus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="27dp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="281dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/divider3"
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="478dp"
        android:background="?android:attr/listDivider" />

</RelativeLayout>